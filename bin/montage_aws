#!/usr/bin/env ruby
require 'montage_aws'
require 'yaml'
require 'aws'

CONFIG_FILE="#{ENV['HOME']}/.montage_aws.yml"

include MontageAWS

def setup_aws config
  AWS.config(config[:aws])
end

def create_swf
  AWS::SimpleWorkflow.new
end

def create_ec2
  AWS::EC2.new
end

def create_s3
  AWS::S3.new
end

def create_config
  default_config = {
    :domain => "montage_aws",
    :workflow_name => "mock_computation",
    :workflow_version => "0.0.1",
    :default_task_list => "computation-task-list",
  }
  if File.exists? CONFIG_FILE
    @config = YAML.load File.open(CONFIG_FILE)
  else
    @config = default_config
  end
end

def create_tasks_factory config, swf, ec2, s3, montage_helper
  #init task factory
  spec = {
    # creates swf stuff
    :setup => Provision,
    :start => Compute,
    :start_daemon => Decider,
    # creates ec2 micro instance and runs infrastructure provisioner
    :setup_ec2_provisioner => StartEC2InfrastructureProvisioner,
    # start infrastructure provisioner - invoked on instance created in setup_ec2_provisioner phase
    :start_ec2_provisioner => InfrastructureProvisioner,
    :start_daemon => Decider,
    :start_worker => Worker,
    :project => ProjectAndDownload

  }
  Tasks.validate! spec

  Tasks.new spec, :config => config, :swf => swf, :ec2 => ec2, :s3 => s3,  :montage_helper => montage_helper, :logger => $stderr

end

@config = create_config
puts @config.inspect
setup_aws @config
@swf = create_swf
@ec2 = create_ec2
@s3  = create_s3
@montage_helper = MontageHelper.new
@tasks = create_tasks_factory @config, @swf, @ec2, @s3, @montage_helper

begin
  cmd = Cmd.new ARGV
  @task = @tasks.create_from_cmd cmd
  @task.execute
rescue RuntimeError => e
  $stderr.puts "error: #{e.message}"
end
